# ============================================
# EmploymentX Environment Variables
# Copy to .env.local and fill in values
# ============================================

# --- Database ---
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/employmentx?schema=public"

# --- Redis (BullMQ queues, rate limiting, caching) ---
REDIS_URL="redis://localhost:6379"

# --- Auth.js ---
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me-to-a-random-32-char-string"

# --- Stripe Billing ---
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# --- OpenTelemetry ---
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318"
OTEL_SERVICE_NAME="employmentx-web"

# --- Sentry ---
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# --- Feature Flags (OpenFeature) ---
FEATURE_FLAG_PROVIDER="in-memory"
# FEATURE_FLAG_PROVIDER="flagd"
# FLAGD_HOST="localhost"
# FLAGD_PORT="8013"

# --- Demo Mode ---
DEMO_MODE_ENABLED="true"
DEMO_SESSION_TTL_MINUTES="60"
DEMO_MAX_SESSIONS="100"

# --- LiveKit (Video Interviews) ---
LIVEKIT_URL="wss://your-livekit-url"
LIVEKIT_API_KEY="your_livekit_api_key"
LIVEKIT_API_SECRET="your_livekit_api_secret"
LIVEKIT_WEBHOOK_SECRET="your_livekit_webhook_secret"

# --- App ---
APP_VERSION="0.5.0"
NODE_ENV="development"
LOG_LEVEL="debug"
